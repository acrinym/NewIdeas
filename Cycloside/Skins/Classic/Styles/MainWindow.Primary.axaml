<Style xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- MainWindow specific styling when using Primary class -->
  
  <Style Selector="Window.primary Grid">
    <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
    <Setter Property="Margin" Value="{DynamicResource SpacingL}"/>
    <Setter Property="Padding" Value="{DynamicResource SpacingXL}"/>
  </Style>

  <Style Selector="Window.primary Border">
    <Setter Property="CornerRadius" Value="{DynamicResource RadiusM}"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentBrush}"/>
  </Style>

</Style>
