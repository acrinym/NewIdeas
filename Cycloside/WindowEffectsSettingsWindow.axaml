<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Cycloside.WindowEffectsSettingsWindow"
        Width="380" Height="420"
        Title="Window Effects Settings">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Spacing="8">
            <TextBlock Text="Target Component"/>
            <ComboBox x:Name="ComponentBox" Width="240"/>
        </StackPanel>

        <ScrollViewer>
            <StackPanel x:Name="EffectPanel" Spacing="6" />
        </ScrollViewer>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,6,0,0">
            <Button Content="Save" IsDefault="True" Click="SaveButton_Click"/>
            <Button Content="Close" IsCancel="True" Click="CloseButton_Click"/>
        </StackPanel>
    </DockPanel>
</Window>