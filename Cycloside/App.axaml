<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Cycloside.Converters"
             x:Class="Cycloside.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <!-- Base semantic tokens loaded first -->
        <StyleInclude Source="axaml://Cycloside/Themes/Tokens.axaml"/>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <!-- Application converters -->
            <converters:IsWorkspaceItemConverter x:Key="IsWorkspaceItemConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            
            <!-- Dynamic theme resources will be loaded here by ThemeManager -->
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
