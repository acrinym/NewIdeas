<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Cycloside.ViewModels"
        x:Class="Cycloside.ControlPanelWindow"
        x:DataType="vm:ControlPanelViewModel"
        Width="400" Height="300"
        Title="Cycloside Control Panel">
    <TabControl>
        <TabItem Header="Profiles">
            <DockPanel Margin="10" LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="8">
                    <Button Content="Apply" Command="{Binding ApplyProfileCommand}"/>
                    <Button Content="Edit" Command="{Binding EditProfilesCommand}"/>
                    <Button Content="New" Command="{Binding NewProfileCommand}"/>
                    <Button Content="Delete" Command="{Binding DeleteProfileCommand}"/>
                </StackPanel>
                <ListBox ItemsSource="{Binding ProfileNames}"
                         SelectedItem="{Binding SelectedProfile}"/>
            </DockPanel>
        </TabItem>
        <TabItem Header="General">
            <StackPanel Margin="10" Spacing="8">
                <CheckBox Content="Launch at Startup"
                          IsChecked="{Binding LaunchAtStartup}"/>
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <TextBlock VerticalAlignment="Center" Text="dotnet Path:"/>
                    <TextBox Width="200" Text="{Binding DotNetPath}"/>
                </StackPanel>
                <Button Content="Save" HorizontalAlignment="Right"
                        Command="{Binding SaveCommand}"/>
                <Button Content="Hotkey Settings..." Margin="0,10,0,0"
                        Command="{Binding OpenHotkeySettingsCommand}"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Plugins">
            <StackPanel Margin="10" Spacing="8">
                <Button Content="Open Plugin Manager..."
                        Command="{Binding OpenPluginManagerCommand}"/>
                <Button Content="Attach Enabled Workspace Plugins"
                        Command="{Binding AttachAllToWorkspaceCommand}"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Appearance">
            <StackPanel Margin="10" Spacing="8">
                <Button Content="Theme Settings..."
                        Command="{Binding OpenThemeSettingsCommand}"/>
                <Button Content="Skin/Theme Editor..."
                        Command="{Binding OpenSkinEditorCommand}"/>
                <Separator/>
                <Button Content="Window Effects Settings..."
                        Command="{Binding OpenWindowEffectsSettingsCommand}"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Runtime">
            <StackPanel Margin="10" Spacing="8">
                <Button Content="Runtime Settings..."
                        Command="{Binding OpenRuntimeSettingsCommand}"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
