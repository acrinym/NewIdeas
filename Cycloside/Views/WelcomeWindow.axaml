<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Cycloside.Views"
        x:Class="Cycloside.Views.WelcomeWindow"
        Title="ðŸš€ Welcome to Cycloside"
        Width="700" Height="500"
        CanResize="False"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0, 0, 0, 20">
            <TextBlock Text="ðŸš€ Welcome to Cycloside!" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0, 0, 0, 10"/>
            <TextBlock Text="Configure your ultimate hacker desktop workspace" 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Margin="0, 0, 0, 15"/>
            <Border Background="#e8f4f8" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="ðŸŽ¯ Setup your preferences:" FontWeight="Bold" Margin="0, 0, 0, 5"/>
                    <TextBlock Text="â€¢ Choose which plugins to load on startup" Margin="0, 2"/>
                    <TextBlock Text="â€¢ Select your preferred terminal (PowerShell vs CMD)" Margin="0, 2"/>
                    <TextBlock Text="â€¢ Configure themes and layout options" Margin="0, 2"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Configuration -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Text="ðŸ”Œ Available Plugins:" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0, 0, 0, 15"/>
                
                <ListBox Name="PluginListControl" Height="300">
                    <!-- Items will be added programmatically in code-behind -->
                </ListBox>

                <StackPanel Margin="0, 20, 0, 0">
                    <TextBlock Text="ðŸ’» Terminal Preference:" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Margin="0, 0, 0, 10"/>
                    
                    <RadioButton GroupName="Terminal" 
                                Content="PowerShell Terminal (Advanced PowerShell integration)"
                                Name="PowerShellRadio" 
                                IsChecked="True" 
                                Margin="0, 5"/>
                    
                    <RadioButton GroupName="Terminal" 
                                Content="Hacker Terminal (CMD with hacker tools)"
                                Name="HackerTerminalRadio" 
                                Margin="0, 5"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0, 20, 0, 0">
            <CheckBox Name="DontShowAgainCheckBox" 
                     Content="Don't show this again" 
                     VerticalAlignment="Center" 
                     Margin="0, 0, 20, 0"/>
            
            <Button Name="ResetButton"
                   Content="ðŸ”„ Reset to Defaults" 
                   Margin="0, 0, 10, 0"
                   Width="140"
                   Background="#ff6b6b" 
                   Foreground="White"/>
            
            <Button Name="ApplyButton"
                   Content="âœ… Apply and Continue" 
                   Width="140"
                   Background="#51cf66" 
                   Foreground="White"
                   FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>