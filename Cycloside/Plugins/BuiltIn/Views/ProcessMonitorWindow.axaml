<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Cycloside.Plugins.BuiltIn"
        x:Class="Cycloside.Plugins.BuiltIn.ProcessMonitorWindow"
        Title="Process Monitor"
        Width="550" Height="600">
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Spacing="5" Margin="5" Grid.Row="0">
            <Button Content="Refresh" Width="80"/>
            <Button Content="Terminate" Width="80"/>
            <ComboBox x:Name="SortBox" Width="120">
                <ComboBoxItem Content="By Name"/>
                <ComboBoxItem Content="By Memory"/>
                <ComboBoxItem Content="By CPU"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Process List -->
        <ListBox x:Name="ProcessListBox" Grid.Row="1">
            <ListBoxItem Content="System (PID: 4)"/>
            <ListBoxItem Content="Cycloside (PID: 1234)"/>
            <ListBoxItem Content="Terminal (PID: 5678)"/>
            <ListBoxItem Content="Browser (PID: 9012)"/>
        </ListBox>
        
        <!-- Status -->
        <TextBlock Text="Processes loaded successfully" Grid.Row="2" Margin="5"/>
    </Grid>
</Window>