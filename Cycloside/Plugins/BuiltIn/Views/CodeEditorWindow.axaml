<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ae="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        xmlns:local="clr-namespace:Cycloside.Plugins.BuiltIn"
        x:Class="Cycloside.Plugins.BuiltIn.CodeEditorWindow"
        Title="Code Editor"
        Width="800" Height="600">
    <DockPanel>
        <StackPanel Orientation="Horizontal" Spacing="5" Margin="5" DockPanel.Dock="Top">
            <ComboBox x:Name="LanguageBox" Width="100">
                <ComboBoxItem Content="C#"/>
                <ComboBoxItem Content="Python"/>
                <ComboBoxItem Content="JavaScript"/>
            </ComboBox>
            <Button Content="New" Width="60"/>
            <Button Content="Open" Width="60"/>
            <Button Content="Save" Width="60"/>
            <Button Content="Save As" Width="80"/>
            <Button Content="Run" Width="60"/>
        </StackPanel>
        <ae:TextEditor x:Name="Editor" FontFamily="Consolas" FontSize="14">
            <ae:TextEditor.Text>
                // Welcome to Cycloside Code Editor
                // Ready for professional development!
                console.log('Hello World!');
            </ae:TextEditor.Text>
        </ae:TextEditor>
        <TextBlock Text="Ready for coding!" DockPanel.Dock="Bottom" Margin="5"/>
    </DockPanel>
</Window>